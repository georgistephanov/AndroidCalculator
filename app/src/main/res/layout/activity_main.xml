<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context="com.georgistephanov.android.calculator.MainActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/white">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="2"
			android:orientation="horizontal"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:paddingTop="80dp">

			<TextView
				android:id="@+id/input_number"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				style="@style/inputTextStyle"
				android:text="123,456"
				android:layout_toLeftOf="@id/operation"/>

			<TextView
				android:id="@+id/operation"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				style="@style/inputTextStyle"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:textColor="@color/materialBlue"
				android:text=""
				android:layout_toLeftOf="@id/second_input_number"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/second_input_number"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				style="@style/inputTextStyle"
				android:layout_alignParentRight="true"
				android:text=""/>

			<android.support.v7.widget.AppCompatImageView
				android:id="@+id/delete_button"
				android:layout_width="50dp"
				android:layout_height="40dp"
				android:layout_alignParentBottom="true"
				android:layout_alignParentEnd="true"
				android:layout_marginBottom="10dp"
				android:scaleType="fitXY"
				android:tint="@color/materialBlue"
				android:background="@color/white"
				app:srcCompat="@drawable/ic_arrow_delete"
				android:onClick="onDeleteButtonClick"/>
		</RelativeLayout>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="3"
			android:orientation="vertical"
			android:divider="@color/materialBlue"
			android:padding="0dp">

			<LinearLayout
				style="@style/buttonRows">
				<Button
					android:id="@+id/clear"
					android:text="C"
					style="@style/clearButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/brackets"
					android:text="()"
					style="@style/operationButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/percentage"
					android:text="%"
					style="@style/operationButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/divide"
					android:text="/"
					style="@style/operationButton"
					android:background="@drawable/calculator_button"/>
			</LinearLayout>
			<LinearLayout
				style="@style/buttonRows">
				<Button
					android:id="@+id/seven"
					android:text="7"
					style="@style/regularCalculatorButton"
					android:background="@drawable/calculator_button" />
				<Button
					android:id="@+id/eight"
					android:text="8"
					style="@style/regularCalculatorButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/nine"
					android:text="9"
					style="@style/regularCalculatorButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/multiply"
					android:text="x"
					style="@style/operationButton"
					android:background="@drawable/calculator_button"/>
			</LinearLayout>
			<LinearLayout
				style="@style/buttonRows">
				<Button
					android:id="@+id/four"
					android:text="4"
					style="@style/regularCalculatorButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/five"
					android:text="5"
					style="@style/regularCalculatorButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/six"
					android:text="6"
					style="@style/regularCalculatorButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/minus"
					android:text="-"
					style="@style/operationButton"
					android:background="@drawable/calculator_button"/>
			</LinearLayout>
			<LinearLayout
				style="@style/buttonRows">
				<Button
					android:id="@+id/one"
					android:text="1"
					style="@style/regularCalculatorButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/two"
					android:text="2"
					style="@style/regularCalculatorButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/three"
					android:text="3"
					style="@style/regularCalculatorButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/plus"
					android:text="+"
					style="@style/operationButton"
					android:background="@drawable/calculator_button"/>
			</LinearLayout>
			<LinearLayout
				style="@style/buttonRows">
				<Button
					android:id="@+id/changeSign"
					android:text="+/-"
					style="@style/operationButton"
					android:background="@drawable/calculator_button"
					android:onClick="onChangeSignClick"/>
				<Button
					android:id="@+id/zero"
					android:text="0"
					style="@style/regularCalculatorButton"
					android:background="@drawable/calculator_button"/>
				<Button
					android:id="@+id/point"
					android:text="."
					style="@style/operationButton"
					android:background="@drawable/calculator_button"
					android:onClick="onPointClick"/>
				<Button
					android:id="@+id/equal"
					android:text="="
					style="@style/equalSign"
					android:background="@drawable/equal_sign_button"/>
			</LinearLayout>

		</LinearLayout>


	</LinearLayout>

</android.support.constraint.ConstraintLayout>
